varying vec3 normal;
varying vec3 position;

uniform vec3 volumeCubeSize_;
uniform vec3 volumeDimensions_;

void main() {
    vec3 p, n;
    extractVertex(p, n);

    // transform p from normalized into proxy coordinates
    p -= 0.5;
    p *= volumeCubeSize_;
    position = p;

    normal = gl_NormalMatrix * n;

    gl_Position = gl_ModelViewProjectionMatrix * vec4(p, 1.0);
    gl_FrontColor = gl_Color;
}
